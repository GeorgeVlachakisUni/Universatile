                    </div>
                    <div></div>
                    <div></div>
                </div>
                <div class="i1">
                    <div></div>
                    <div></div>
                </div>
            </div>
            <div class="i5">
                <div></div>
                <div></div>
            </div>
        </div>
    </main>
    <RadzenDialog />
    <RadzenNotification />
    <RadzenContextMenu />
    <RadzenTooltip />
</div>


@code {
    int value = 1;
}
