@using Microsoft.AspNetCore.Components;
@using Radzen.Blazor
@using System.Collections;
@using System.Collections.Generic;
@using System.Linq;
@inherits LayoutComponentBase

<PageTitle>Universitile</PageTitle>


<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="mail">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 8 8"><path fill="currentColor" d="M0 1v1l4 2l4-2V1H0zm0 2v4h8V3L4 5L0 3z" /></svg>
